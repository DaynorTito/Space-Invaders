<Page x:Class="SpaceInvadersDaynorTito.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SpaceInvadersDaynorTito"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      
      IsTabStop="True">


  <Grid>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
      <StackPanel Orientation="Horizontal">
        <Image Source="ms-appx:///Assets/Enemy1.png"
                   Width="50"/>
        <TextBlock Text="SPACE INVADERS"
                       FontSize="50"
                       FontWeight="Bold"
                       Margin="40"/>
        <Image Source="ms-appx:///Assets/Enemy2.png"
                   Width="50"/>
      </StackPanel>

      <Button Content="Start Game"
                FontSize="50"
                Margin="0,150,0,20"
                Foreground="Chartreuse"
                CornerRadius="30"
                HorizontalAlignment="Center"
                Click="StartGame_Click"/>
      <Button Content="Top Scores"
                FontSize="50"
                HorizontalAlignment="Center"
                Foreground="Chartreuse"
                CornerRadius="30"
                Click="Go_TopScores"/>
    </StackPanel>

  </Grid>

</Page>
