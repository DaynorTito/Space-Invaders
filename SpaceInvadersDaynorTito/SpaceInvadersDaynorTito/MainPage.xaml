<Page x:Class="SpaceInvadersDaynorTito.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SpaceInvadersDaynorTito"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      IsTabStop="True"
      KeyDown="Grid_KeyLeft">

  <Grid>
    <Canvas Width="900" Height="450" Background="Blue">
      <Image Source="ms-appx:///Assets/Sprites/player.png"
                   Canvas.Left="{Binding PositionX}"
                   Canvas.Top="{Binding PositionY}"
                   Width="60" Height="60" />
    </Canvas>
  </Grid>

</Page>
