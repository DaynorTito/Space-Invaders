<Page
    x:Class="SpaceInvadersDaynorTito.GameOverView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceInvadersDaynorTito"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">


      <StackPanel Orientation="Horizontal">
        <Image Source="ms-appx:///Assets/Sprites/invader_01-1.png"
             Width="50"/>
        <TextBlock Text="   Game Over   " FontSize="60" FontWeight="Bold" Margin="0,0,0,20"/>
        
      </StackPanel>

      <TextBlock x:Name="TitleScore" FontSize="24" Margin="0,0,0,20"/>
      <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
        <TextBox x:Name="txtName" PlaceholderText="Ingresa tu nombre" Margin="0,0,10,0"/>
        
      </StackPanel>
      <Button Content="Save"
              FontSize="30"
              Margin="0,200,0,15"
              Foreground="Chartreuse"
              CornerRadius="30"
              HorizontalAlignment="Center"
              Click="Save_Click"/>
    </StackPanel>
  </Grid>
</Page>
